		{
			Wait(5);
			if ( oSchwingtuer.Graphic == 538 )
			{
				oSchwingtuer.Graphic = 537;
			}
			else
			{
				player.Say("Die ist doch schon zu.");
			}
		}
		else Unhandled();
	}
}

