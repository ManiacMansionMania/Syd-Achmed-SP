/****************************
*   Raum-Funktionen
****************************/
function room_FirstLoad()
{
	if ( 16 == player.PreviousRoom )
	{
		Wait(30);
		StartCutscene(eSkipESCOrRightButton);
		cAchmed.SayIfPlayer("Hallö, Effendi!");
		cAchmed.SayIfPlayer("Sei Willkommen in Achmeds Heim.");
		cAchmed.SayIfPlayer("Du können machen mit Achmed viele Sachen.");
		cAchmed.SayIfPlayer("Besuchen können wir Jeff vom Pizza Laden oder Syd, der leben über Achmed.");
		cAchmed.SayIfPlayer("Aber du schließlich sollen entscheiden, wo du gehen hin willst.");
		EndCutscene();

		cSyd.AddChangePlayer();
	}
}

function room_Load()
{
	Mouse.Visible = true;
	gAction.Visible = true;
	gMaingui.Visible = true;

	oTuer.init_object(8);
	PlayMusic(33);
}


/****************************
*   Tür-Hotspot-Funktionen
****************************/
function hTuer_AnyClick()
{
	if ( any_click_on_door(8, oTuer, 46, 122, eDirLeft, 19, 28, 125, eDirDown) == 0 ) Unhandled();
}


