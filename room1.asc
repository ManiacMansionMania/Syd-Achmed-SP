/****************************
*   Raum-Funktionen
****************************/
function room_FirstLoad()
{
	cSyd.UnlockView();
	oTuer.init_object(3);
	Mouse.Visible = true;
	gAction.Visible = true;
	gMaingui.Visible = true;

	if ( 16 == player.PreviousRoom )
	{
		Wait(50);
		// Da das Syd-Starterpack auch Achmed enthält, darf dieser beim ersten betreten diese Sätze nicht sagen
		StartCutscene(eSkipESCOrRightButton);
		cSyd.SayIfPlayer("Hallo Leute!");
		cSyd.SayIfPlayer("Willkommen zu meinem AGS-Starterpack!");
		cSyd.SayIfPlayer("Lauft ein bisschen herum ...");
		cSyd.SayIfPlayer("... schaut euch alles an ...");
		cSyd.SayIfPlayer("... dann seht ihr wie und wo ich wohne.");
		EndCutscene();

		cAchmed.AddChangePlayer();
	}
}

function room_Load()
{
	PlayMusic(21);
	//oTuer.init_object(3);
	Door[eDoorNumSyd].Init(oTuer, hTuer);
}


