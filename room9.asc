/****************************
*   Raum-Funktionen
****************************/
function room_Load()
{
	player.LockView(105);

	gAction.Visible = false;
	gMaingui.Visible = false;
	Mouse.Visible = false;
}

function room_AfterFadeIn()
{
	StartCutscene(eSkipESCOrRightButton);
	Wait (1500);
	player.ChangeRoom(player.PreviousRoom); // zurück zum letzen Raum
	EndCutscene();
	
	gAction.Visible = true;
	gMaingui.Visible = true;
		Mouse.Visible = true;
	player.UnlockView();
	player.FaceDirection(eDirUp);
}


