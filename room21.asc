/****************************
*   Objekt-Funktionen
****************************/
function oSchrank_AnyClick()
{
	if (any_click_move(123, 106, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);

			if ( player == cAchmed )
			{
				player.Say("Achmed müssen mal wieder holen Sachen.");
			}
			else
			{
				player.Say("Leer.");
			}				
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);

			if ( player == cAchmed )
			{			
				player.Say("Tür zu lose zu nehmnen.");
			}
			else
			{
				player.Say("Nein.");
			}				
		}
		else if (UsedAction(eActUse))
		{
			Wait(5);

			if ( player == cAchmed )
			{			
				player.Say("Achmed nix zum reintun haben.");
			}
			else
			{
				player.Say("Ich will da nicht reinstellen.");
			}				
		}
		else if (UsedAction(eActOpen))
		{
			Wait(5);

			if ( player == cAchmed )
			{			
				player.Say("Sein offen.");
			}
			else
			{
				player.Say("Die Tür ist bereits auf.");
			}				
		}
		else if (UsedAction(eActClose))
		{
			Wait(5);
			PlaySound(50);
			oSchrank.Visible = false;
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Nein.");
		}
		else Unhandled();
	}
}


