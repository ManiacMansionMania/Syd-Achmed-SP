			{
				player.Say("Ein Tisch, der in der Küche steht.");
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			if ( player == cAchmed )
			{
				player.Say("Achmed haben selber Tisch.");
			}
