		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			if ( player == cAchmed )
			{
				player.Say("Achmed nix wollen umschubsen Tisch.");
			}
			else
			{			
				player.Say("Damit er umfällt?");
			}
		}
		else Unhandled();
	}
}

function oMikrowelle_AnyClick()
{
	if (any_click_move(149, 138, eDirectionUp))
