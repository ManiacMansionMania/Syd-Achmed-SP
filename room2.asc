function oKuehlschrank_AnyClick()
{
	if (any_click_move(223, 132, eDirectionUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			if ( player == cAchmed )
			{
				player.Say("");
			}
			else if ( player == cSyd )
			{			
				player.Say("Wo ist der Käse?");
				player.Say("Hehehehe ...");
			}
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
