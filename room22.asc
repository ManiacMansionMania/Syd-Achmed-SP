function hNachUnten_AnyClick()
{
	if (any_click_move(47, 134, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			player.EnterRoom(6, 539, 39, eDirDown);
		}
		else Unhandled();
	}
}

function hNachOben_AnyClick()
{
	if (any_click_move(528, 14, eDirLeft))
	{
		if (UsedAction(eActWalkTo))
		{
			Wait(5);
			MovePlayer (577, 119);
			player.FaceDirection(eDirDown);
			cSyd.SayIfPlayer("Da geht es zum Dachboden.");
			cAchmed.SayIfPlayer("Das führen zu Bodendach.");
			Wait(10);
		}
		else Unhandled();
	}
}

function hTuer_AnyClick()
{
	if (any_click_move(138, 123, eDirUp))
	{
		if (UsedAction(eActWalkTo))
		{
		//	Wait(5);
		}
		else if (UsedAction(eActLookAt))
		{
			Wait(5);
			cSyd.SayIfPlayer("Wer wohnt da eigentlich?");
			cAchmed.SayIfPlayer("Achmed fragen sich: Wer wohnen dort?");
		}
		else if (UsedAction(eActPickUp))
		{
			Wait(5);
			cSyd.SayIfPlayer("Die ist mir zu schwer.");
			cAchmed.SayIfPlayer("Sein mir zu schwer.");
		}
		else if (UsedAction(eActUse) || UsedAction(eActOpen) || 
						 UsedAction(eActClose))
		{
			Wait(5);
			player.Say("Nein.");
		}
		else if (UsedAction(eActPull) || UsedAction(eActPush))
		{
			Wait(5);
			player.Say("Nein.");
		}
		else Unhandled();
	}
}

